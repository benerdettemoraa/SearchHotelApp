<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/eight_size"
    android:layout_marginTop="@dimen/four_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/four_size"
        android:layout_margin="@dimen/four_size">

        <ImageView android:id="@+id/img_hotel_avatar"
            android:layout_width="@dimen/sixty_size"
            android:layout_height="@dimen/sixty_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_launcher_round"/>

        <ProgressBar
            android:id="@+id/progress_circular_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/img_hotel_avatar"
            app:layout_constraintLeft_toLeftOf="@id/img_hotel_avatar"
            app:layout_constraintRight_toRightOf="@id/img_hotel_avatar"
            app:layout_constraintTop_toTopOf="@+id/img_hotel_avatar" />

        <TextView android:id="@+id/txt_hotel_name"
            android:layout_width="@dimen/zero_size"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:layout_marginStart="@dimen/eight_size"
            android:layout_marginLeft="@dimen/eight_size"
            app:layout_constraintLeft_toRightOf="@+id/img_hotel_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/txt_phone_contact"
            android:layout_width="@dimen/zero_size"
            android:layout_height="wrap_content"
            android:text="Telephone: +254 712523763"
            android:layout_marginTop="@dimen/four_size"
            app:layout_constraintLeft_toLeftOf="@id/txt_hotel_name"
            app:layout_constraintRight_toRightOf="@id/txt_hotel_name"
            app:layout_constraintTop_toBottomOf="@id/txt_hotel_name"/>

        <TextView android:id="@+id/txt_fax_contact"
            android:layout_width="@dimen/zero_size"
            android:layout_height="wrap_content"
            android:text="Fax: 2334 7125 23763"
            android:layout_marginTop="@dimen/four_size"
            app:layout_constraintLeft_toLeftOf="@id/txt_hotel_name"
            app:layout_constraintRight_toRightOf="@id/txt_hotel_name"
            app:layout_constraintTop_toBottomOf="@id/txt_phone_contact"/>

        <TextView android:id="@+id/txt_hotel_distance"
            android:layout_width="@dimen/zero_size"
            android:layout_height="wrap_content"
            android:text="50km"
            android:layout_marginTop="@dimen/four_size"
            app:layout_constraintLeft_toLeftOf="@id/txt_hotel_name"
            app:layout_constraintTop_toBottomOf="@id/txt_fax_contact"/>

        <TextView android:id="@+id/txt_hotel_rating"
            android:layout_width="@dimen/zero_size"
            android:layout_height="wrap_content"
            android:text="Rated: 10"
            android:layout_marginTop="@dimen/four_size"
            app:layout_constraintRight_toRightOf="@id/txt_hotel_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_hotel_distance"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>